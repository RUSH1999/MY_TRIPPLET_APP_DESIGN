<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#C1C1C1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgProductCart"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:src="@drawable/product"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtProductNameCart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:text="Product name here"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/txtVariantNameCart"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="15dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:text="variant name"
                        android:textStyle="bold"
                        android:textColor="#959595"/>
                    <TextView
                        android:id="@+id/txtDescriptionCart"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:text="Sasta Hyper Mall"
                        android:textColor="#959595" />
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/txtProductPriceCart"
                          android:layout_marginStart="10dp"
                          android:layout_marginEnd="10dp"
                          android:padding="3dp"
                          android:paddingStart="5dp"
                          android:paddingEnd="5dp"
                          android:textAlignment="center"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="19sp"
                          android:text="$"
                          android:textColor="@android:color/black"/>
                      <TextView
                          android:id="@+id/txtProductPriceCart1"
                          android:layout_marginStart="25dp"
                          android:layout_marginEnd="10dp"
                          android:padding="3dp"
                          android:paddingStart="5dp"
                          android:paddingEnd="5dp"
                          android:textAlignment="center"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="19sp"
                          android:text="542.00"
                          android:textColor="@android:color/black"/>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingRight="7dp"
                          android:gravity="right"
                          android:textAlignment="gravity">

                          <TextView
                              android:textColor="@android:color/black"
                              android:layout_width="wrap_content"
                              android:paddingTop="5dp"
                              android:layout_marginLeft="5dp"
                              android:layout_height="wrap_content"
                              android:layout_toEndOf="@id/pp"
                              android:text="Qty:"
                              android:textSize="21sp"
                              android:textStyle="bold"
                              />
                          <TextView
                              android:textColor="@android:color/black"
                              android:layout_width="wrap_content"
                              android:paddingTop="5dp"
                              android:layout_marginLeft="5dp"
                              android:layout_height="wrap_content"
                              android:layout_toEndOf="@id/pp"
                              android:text="1.2"
                              android:textSize="21sp"
                              android:textStyle="bold"

                              />
                          <TextView
                              android:textColor="@android:color/black"
                              android:layout_width="wrap_content"
                              android:paddingTop="5dp"
                              android:layout_marginLeft="5dp"
                              android:layout_height="wrap_content"
                              android:layout_toEndOf="@id/pp"
                              android:text="kg"
                              android:textSize="21sp"
                              android:textStyle="bold"
                              />
                      </LinearLayout>
                  </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtSaveForLater"
                    android:layout_weight="0.5"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="Save for later"
                    android:textColor="#959595"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BCB9B9"
                    />

                <TextView
                    android:id="@+id/txtProductRemoveCart"
                   android:layout_weight="0.5"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="Remove"
                    android:textColor="#959595"/>
            </LinearLayout>
        </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="right|bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="#000000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textSize="25dp"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>