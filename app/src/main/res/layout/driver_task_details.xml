<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order id:"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54545878"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgProductCart"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:src="@drawable/product"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtShopName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/txttelephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/telephone"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        />

                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/txtmobilenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5474545872"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        />

                </LinearLayout>

                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/txtshopaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="shop Address"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/txtdistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance:"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        />

                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/txtdistanceunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        />

                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/txtdistanceKM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KM"
                        android:layout_marginLeft="2dp"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/txtcustomername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:layout_marginLeft="2dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/txt_customer_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/telephone"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="19dp"
                />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/txt_customer_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5474545872"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="19dp"
                />

        </LinearLayout>

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/txt_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Address"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="19dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="10dp"
                android:id="@+id/txt_customer_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="19dp"
                />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/txt_customer_distance_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="19dp"
                />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/txt_customer_distance_KM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KM"
                android:layout_marginLeft="2dp"
                android:textColor="#000000"
                android:textSize="19dp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>